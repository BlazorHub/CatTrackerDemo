<h1>Tracker results</h1>

@if (Results.Any())
{
    <ul>
        @foreach (var result in Results)
        {
            <li>
                <strong>@result.Name</strong> (@result.Breed, @result.Color) located @(result.Distance.ToString("#.##"))km away
            </li>
        }
    </ul>
}
else
{
    <div style="font-size: 30px">
        Sorry, no cats match.
    </div>
}

@code {
    [Parameter]
    public IList<CatTrackerResult> Results { get; set; }
}
